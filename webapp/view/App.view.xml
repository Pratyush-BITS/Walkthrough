<mvc:View
    controllerName="com.learn.walkthrough.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
	<Shell id="shell">
		<App id="app" class="myAppDemoWT">
			<pages>
				<Page id="page" title="{i18n>homePageTitle}">
					<headerContent>
						<Button
							icon="sap-icon://bell"
							press=".onOpenDialog"
						/>
					</headerContent>
					<content>
						<mvc:XMLView viewName="com.learn.walkthrough.view.HelloPanel"/>
						<mvc:XMLView viewName="com.learn.walkthrough.view.InvoiceList"/>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
