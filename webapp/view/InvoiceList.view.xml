<mvc:View
   controllerName="com.learn.walkthrough.controller.InvoiceList"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">
   
   <List
      id="invoiceList"
      class="sapUiResponsiveMargin"
      width="auto"
      items="{invoice>/Invoices}"
   >

      <headerToolbar>
         <Toolbar>
            <HBox>
               <Title text ="{i18n>invoiceListTitle}" width="40rem"/>
               <VBox width="34.3rem">
                  <SearchField search=".onFilterInvoices" placeholder='{i18n>searchInInvoiceList}'></SearchField>
               </VBox>
            </HBox>
         </Toolbar>
      </headerToolbar>

      <items>

         <ObjectListItem
            title="{invoice>Quantity} x {invoice>ProductName}"
            number="{
               parts: [{path: 'invoice>ExtendedPrice'}, {path: 'currency>/INR'}],
               type: 'sap.ui.model.type.Currency',
               formatOptions: {
                  showMeasure: false
               }
            }"
            numberUnit="{currency>/INR}"
            numberState="{= 
            ${invoice>ExtendedPrice} > 70 ? 'Error' : ${invoice>ExtendedPrice} > 50 ? 'Warning' : 'Success'
            }">

            <firstStatus> 
               <ObjectStatus text="{
                  path: 'invoice>Status',
                  formatter: '.formatter.statusText'
               }"/>

            </firstStatus>

         </ObjectListItem>
	</items>
   </List>
</mvc:View>